{
  "name": "squad-logic",
  "version": "1.0.0",
  "description": "An application that converts raw GotSport registration data in CSV format and provides both teaming and scheduling frameworks, intended to support youth sports organizations.",
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "build": "node scripts/build.js",
    "frontend:dev": "vite",
    "frontend:build": "node scripts/runViteWithPersistenceEndpoint.js build",
    "frontend:preview": "node scripts/runViteWithPersistenceEndpoint.js preview",
    "typecheck": "tsc -p jsconfig.json"
  },
  "directories": {
    "doc": "docs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.87.1",
    "dotenv": "^17.2.3",
    "lucide-react": "^0.556.0",
    "papaparse": "^5.5.3",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.12.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^27.3.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.3",
    "vite": "^5.4.0",
    "vitest": "^4.0.15"
  },
  "private": true,
  "workspaces": [
    "frontend",
    "packages/*"
  ],
  "overrides": {
    "esbuild": "^0.25.0"
  }
}